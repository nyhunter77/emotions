<!DOCTYPE html>
<html>
<head>
  <title>Animote</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <style><%= yield :stylesheets %></style>
  <link type="text/css" href="/assets/jplayer.blue.monday.css" rel="stylesheet" /> 
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <script type="text/javascript" src="http://code.jquery.com/jquery-1.7.2.min.js"></script>
  <script type="text/javascript" src="/assets/jquery.jplayer.min.js"></script>
  <script src="/assets/jquery.slides.js"></script>
  
  <%= csrf_meta_tags %>
  <!-- font -->
  <link href='http://fonts.googleapis.com/css?family=Euphoria+Script' rel='stylesheet' type='text/css'>

  <%= csrf_meta_tags %> 
    <script type="text/javascript">
      $(document).ready(function(){
        $("#jquery_jplayer_1").jPlayer({
          ready: function () {
            $(this).jPlayer("setMedia", {
              title: "Moon",
              m4a: "http://nycda.zone/guie851/Music/moon.m4a"
            });
          },
          swfPath: "/js",
          supplied: "m4a, oga"
        });
      });
    </script> 

</head>
<body>
  <div id="wrapper">
    <header>
      <%= render '/devise/shared/nav' %>
      <div class="sign_in">
        <%= render '/devise/sessions/new' %>
      </div>
      <div class="sign_up">
        <%= render '/devise/registrations/new' %>
      </div> 
    </header> 
  

    <% if notice %><div id="notice"><%= notice %></div><% end %>
    <% if alert %><div id="alert"><%= alert %></div><% end %>

    <%= yield %>
  </div>
</body>
</html>
