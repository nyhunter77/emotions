<h1> happy vid partial </h1>

  <% @video = Video.find(rand(0..Video.last.id)) %>
  <% @name = Video.find(@video).name %>
  <% @file = Video.find(@video).file %>


<% if @emotion.name == "happy" %>
	<% content_for :stylesheets do %>
  	body {background-color: pink;}
	<% end %>
<% else %>
	<% content_for :stylesheets do %>
  	body {background-color: lightblue;}
	<% end %>
<% end %>

<div id="menuContainer">

<h3 id="menu"> Menu </h3>

<div id="menuField">
	<ul>
		<li> <%= link_to 'Add a Video', home_video_form_path %> </li>
	</ul>
</div>

</div>

<div class="space"> </div>

<div id="videoBox">
<h1> Video: <%= @name %> </h1>
<iframe width="1280" height="720" src=http://<%= @file %> frameborder="0" allowfullscreen></iframe> <br/>
</div>


