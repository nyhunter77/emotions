<!DOCTYPE html>
<html>
<head>
  <title>Animote</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <style><%= yield :stylesheets %></style>
  <link type="text/css" href="/assets/jplayer.blue.monday.css" rel="stylesheet" /> 
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <script type="text/javascript" src="/assets/jquery.jplayer.min.js"></script>
  <script type="text/javascript" src="/assets/jplayer.playlist.min.js"></script>
  <script type="text/javascript" src="/assets/bootstrap_js/bootstrap.min.js"></script>
  <script src="/assets/jquery.slides.js"></script>
  
  <%= csrf_meta_tags %>
  <!-- font -->
  <link href='http://fonts.googleapis.com/css?family=Euphoria+Script' rel='stylesheet' type='text/css'>

  <%= csrf_meta_tags %> 

</head>
<body>

  <div id="wrapper">
    <header>
      <%= render '/users/shared/nav' %>
    </header> 
  

    <% if notice %><div id="notice"><%= notice %></div><% end %>
    <% if alert %><div id="alert"><%= alert %></div><% end %>

    <%= yield %>
  </div>

</body>
</html>
