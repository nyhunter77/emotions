<div class="home_index">
	<h1>I want to feel... </h1>
	 
	<div class="form">
		<%= form_tag(home_show_path, method: :post) do %> 
			<%= select_tag(:name, options_for_select(
				[['happy', emotion_id("happy")],
				 ['sad',   emotion_id("sad")  ]
				]),{class: :select}) %> 
	    <br>  
	    <div class="radio_button"><%= radio_button_tag :radio, :video %></div> Video | 
	    <div class="radio_button"><%= radio_button_tag :radio, :music, checked = true %></div> Music  
	    <br>
			<%= submit_tag 'Hit It!', class: :button %>
		<% end %>
	</div> 
</div>

